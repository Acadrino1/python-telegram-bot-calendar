{
  "development": {
    "database": {
      "host": "localhost",
      "port": 3306,
      "name": "appointment_scheduler",
      "user": "scheduler_user",
      "password": "secure_password",
      "charset": "utf8"
    },
    "server": {
      "port": 3000,
      "environment": "development"
    },
    "jwt": {
      "secret": "your-super-secret-jwt-key-here",
      "expiry": "24h"
    },
    "email": {
      "host": "smtp.gmail.com",
      "port": 587,
      "user": "your-email@gmail.com",
      "password": "your-app-password",
      "secure": false
    },
    "sms": {
      "twilioAccountSid": "your-twilio-sid",
      "twilioAuthToken": "your-twilio-token",
      "twilioPhoneNumber": "+1234567890"
    },
    "telegram": {
      "botToken": "your-telegram-bot-token",
      "supportGroupId": "-1001234567890",
      "adminUserIds": [123456789, 987654321]
    },
    "timezone": {
      "default": "America/New_York"
    },
    "rateLimiting": {
      "windowMs": 900000,
      "maxRequests": 100
    },
    "scheduling": {
      "defaultAppointmentDuration": 30,
      "bookingAdvanceDays": 30,
      "cancellationHours": 24,
      "reminderHoursBefore": 24
    },
    "supportSystem": {
      "enabled": true,
      "supportGroupId": "-1001234567890",
      "anonymizeUserData": true,
      "maxSupportTickets": 50,
      "ticketTimeoutMinutes": 30,
      "autoEscalateMinutes": 60
    }
  },
  "production": {
    "database": {
      "host": "${DB_HOST}",
      "port": "${DB_PORT}",
      "name": "${DB_NAME}",
      "user": "${DB_USER}",
      "password": "${DB_PASSWORD}",
      "charset": "utf8",
      "ssl": true
    },
    "server": {
      "port": "${PORT}",
      "environment": "production"
    },
    "jwt": {
      "secret": "${JWT_SECRET}",
      "expiry": "${JWT_EXPIRY}"
    },
    "email": {
      "host": "${EMAIL_HOST}",
      "port": "${EMAIL_PORT}",
      "user": "${EMAIL_USER}",
      "password": "${EMAIL_PASSWORD}",
      "secure": true
    },
    "sms": {
      "twilioAccountSid": "${TWILIO_ACCOUNT_SID}",
      "twilioAuthToken": "${TWILIO_AUTH_TOKEN}",
      "twilioPhoneNumber": "${TWILIO_PHONE_NUMBER}"
    },
    "telegram": {
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "supportGroupId": "${SUPPORT_GROUP_ID}",
      "adminUserIds": "${ADMIN_USER_IDS}"
    },
    "timezone": {
      "default": "${DEFAULT_TIMEZONE}"
    },
    "rateLimiting": {
      "windowMs": "${RATE_LIMIT_WINDOW_MS}",
      "maxRequests": "${RATE_LIMIT_MAX_REQUESTS}"
    },
    "scheduling": {
      "defaultAppointmentDuration": "${DEFAULT_APPOINTMENT_DURATION}",
      "bookingAdvanceDays": "${BOOKING_ADVANCE_DAYS}",
      "cancellationHours": "${CANCELLATION_HOURS}",
      "reminderHoursBefore": "${REMINDER_HOURS_BEFORE}"
    },
    "supportSystem": {
      "enabled": "${SUPPORT_SYSTEM_ENABLED}",
      "supportGroupId": "${SUPPORT_GROUP_ID}",
      "anonymizeUserData": "${SUPPORT_ANONYMIZE_DATA}",
      "maxSupportTickets": "${SUPPORT_MAX_TICKETS}",
      "ticketTimeoutMinutes": "${SUPPORT_TICKET_TIMEOUT}",
      "autoEscalateMinutes": "${SUPPORT_AUTO_ESCALATE}"
    }
  }
}