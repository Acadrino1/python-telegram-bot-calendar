{
  "name": "appointment-scheduler",
  "version": "1.0.0",
  "description": "Complete appointment scheduling and management system",
  "main": "src/bot/bot.js",
  "scripts": {
    "start": "npm run start:api",
    "start:api": "node src/index.js",
    "start:bot": "node src/bot/bot.js",
    "dev": "nodemon src/index.js",
    "dev:bot": "nodemon src/bot/bot.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "init:providers": "node scripts/initialize-providers.js",
    "test:providers": "node scripts/test-provider-setup.js",
    "setup": "npm run init:providers && npm run test:providers",
    "build": "tsc",
    "lint": "eslint src tests",
    "format": "prettier --write src tests",
    "features:status": "node -e \"const {getStatusReport} = require('./config/features'); console.log(JSON.stringify(getStatusReport(), null, 2))\"",
    "features:validate": "node -e \"const {validate} = require('./config/startup-validator'); validate().then(r => console.log('Validation:', r.valid ? 'PASSED' : 'FAILED'))\"",
    "features:list": "node -e \"const {getEnabledFeatures} = require('./config/features'); console.log('Enabled Features:', getEnabledFeatures())\"",
    "config:check": "node -e \"const {validator} = require('./config/startup-validator'); validator.validate().then(r => { console.log('Config Status:', r.valid ? '✅ Valid' : '❌ Invalid'); if (!r.valid) console.log('Errors:', r.validation.errors); })\"",
    "features:demo": "node scripts/demo-feature-toggles.js",
    "features:test": "node scripts/test-feature-toggles.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bottleneck": "^2.19.5",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "dompurify": "^3.2.6",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "lru-cache": "^11.1.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.43",
    "mysql2": "^3.6.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^6.9.4",
    "objection": "^3.1.5",
    "opossum": "^9.0.0",
    "p-limit": "^6.2.0",
    "p-queue": "^8.1.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.16.3",
    "telegraf-calendar-telegram": "^2.0.2",
    "twilio": "^4.15.0",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "appointment",
    "scheduling",
    "booking",
    "calendar",
    "management",
    "telegram-bot",
    "rest-api",
    "mysql",
    "nodejs"
  ],
  "author": "Swarm Integration Engineer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/lodge-scheduler.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lodge-scheduler/issues"
  },
  "homepage": "https://github.com/yourusername/lodge-scheduler#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
