# SECURE ENVIRONMENT CONFIGURATION
# =====================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=appuser
# CHANGE THESE PRODUCTION CREDENTIALS!
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW
DB_NAME=appointment_scheduler

# JWT Configuration
# CRITICAL: Generate a new secure JWT secret!
JWT_SECRET=CHANGE_THIS_SECURE_JWT_SECRET_KEY_NOW_256_BITS_MIN
JWT_EXPIRES_IN=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
# CHANGE THESE EMAIL CREDENTIALS!
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@appointmentscheduler.com

# SMS Configuration (Twilio)
# CHANGE THESE TWILIO CREDENTIALS!
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Settings
APP_NAME=Appointment Scheduler
APP_URL=https://your-domain.com
TIMEZONE=America/New_York

# Rate Limiting - Enhanced Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_MAX_REQUESTS_PER_IP=20
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Booking Rules
MAX_ADVANCE_BOOKING_DAYS=90
MIN_ADVANCE_BOOKING_HOURS=2
CANCELLATION_ADVANCE_HOURS=24

# Notification Settings
SEND_EMAIL_NOTIFICATIONS=true
SEND_SMS_NOTIFICATIONS=false
REMINDER_HOURS_BEFORE=[24, 2]

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Telegram Bot Configuration
# CRITICAL: Generate a new bot token from @BotFather
TELEGRAM_BOT_TOKEN=YOUR_NEW_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_PORT=3001

# Live Chat Support System Configuration
# FIXED: Missing SUPPORT_GROUP_ID configuration
SUPPORT_SYSTEM_ENABLED=true
SUPPORT_GROUP_ID=-1001234567890
SUPPORT_ANONYMIZE_DATA=true
SUPPORT_MAX_TICKETS=50
SUPPORT_TICKET_TIMEOUT=30
SUPPORT_AUTO_ESCALATE=60

# Admin Configuration
# CRITICAL: Remove hardcoded admin IDs, use environment variable
# ADMIN_USER_IDS=123456789,987654321
TELEGRAM_ADMIN_ID=YOUR_TELEGRAM_USER_ID

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://your-domain.com
CSRF_PROTECTION_ENABLED=true

# Session Security
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_KEY_NOW
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# API Security
API_KEY_REQUIRED=true
API_RATE_LIMIT_ENABLED=true
API_REQUEST_SIZE_LIMIT=1mb

# Database Security
DB_SSL_ENABLED=true
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_CONNECTION_TIMEOUT=60000

# Monitoring and Logging
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING=true
AUDIT_LOG_ENABLED=true