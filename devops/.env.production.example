# Production Environment Configuration
# Telegram Appointment Scheduler Bot

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=appointment_scheduler
DB_USER=appuser
DB_PASSWORD=your-secure-db-password-here
DB_ROOT_PASSWORD=your-secure-root-password-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
APP_PORT=3000
API_BASE_URL=https://your-domain.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits
JWT_EXPIRY=24h

# Timezone
DEFAULT_TIMEZONE=America/New_York

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
SUPPORT_GROUP_ID=-1001234567890
ADMIN_USER_IDS=123456789,987654321

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-app-specific-password

# =============================================================================
# SMS CONFIGURATION (TWILIO)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=warn
LOG_FORMAT=json

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=your-secure-grafana-password

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Notifications
NOTIFICATION_EMAIL=alerts@your-domain.com

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================
DEFAULT_APPOINTMENT_DURATION=30
BOOKING_ADVANCE_DAYS=30
CANCELLATION_HOURS=24
REMINDER_HOURS_BEFORE=24

# =============================================================================
# SUPPORT SYSTEM CONFIGURATION
# =============================================================================
SUPPORT_SYSTEM_ENABLED=true
SUPPORT_ANONYMIZE_DATA=true
SUPPORT_MAX_TICKETS=50
SUPPORT_TICKET_TIMEOUT=30
SUPPORT_AUTO_ESCALATE=60

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key
SSL_CA_PATH=/etc/ssl/certs/your-ca.crt

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=300000

# Application Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=appointment_scheduler
RESTART_POLICY=unless-stopped

# Container Resource Limits
APP_MEMORY_LIMIT=512m
DB_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=256m

# =============================================================================
# DEVELOPMENT/DEBUG (SET TO false IN PRODUCTION)
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PLAYGROUND=false